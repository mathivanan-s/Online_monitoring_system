<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/border1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/stop"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="start"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/machine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Machine name"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:paddingRight="4dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/singlesheet_view"
            android:background="@color/Red">

            <ImageView
                android:id="@+id/stop_status"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:paddingTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/aeff"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="AEFF"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/peff"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="PEFF"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_below="@+id/aeff"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/weft"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="WT:10/00.22"
                android:textSize="15dp"
                android:textColor="@color/Black"
                android:layout_below="@+id/peff" />
            <TextView
                android:id="@+id/warp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="WP:6/00.16"
                android:textSize="15dp"
                android:textColor="@color/Black"
                android:layout_below="@id/weft"/>

            <TextView
                android:id="@+id/rpm"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="RPM"
                android:textSize="15dp"
                android:textColor="@color/Black"
                android:layout_below="@id/warp"/>

            <TextView
                android:id="@+id/design"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="DESIGN"
                android:textSize="15dp"
                android:textColor="@color/Black"
                android:layout_below="@id/rpm"/>

        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:id="@+id/op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tamil selvan"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</LinearLayout>