<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/color_picker">

    <TextView
        android:id="@+id/bbb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22dp"
        android:background="@drawable/border1"
        android:textColor="@color/white"
        android:text="Efficiency Color Settings"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/bbb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/lv1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/select_color1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/border2"
                android:textColor="@color/colorPrimaryDark"
                android:text="30 % TO 50 %   -->" />

            <Button
                android:id="@+id/color_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:drawable/btn_dropdown"
                android:text="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv2"
            android:gravity="center"
            android:layout_below="@+id/lv1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_color2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="50% TO 60%"/>

            <Button
                android:id="@+id/color_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:drawable/btn_dropdown" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv3"
            android:gravity="center"
            android:layout_below="@+id/lv2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/select_color3"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="60% TO 70%" />

            <Button
                android:id="@+id/color_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:drawable/btn_dropdown"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv4"
            android:gravity="center"
            android:layout_below="@+id/lv3"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/select_color4"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="70% TO 80%"/>

            <Button
                android:id="@+id/color_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:drawable/btn_dropdown" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv5"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/lv4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/select_color5"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="80% TO 90%" />

            <Button
                android:id="@+id/color_button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:drawable/btn_dropdown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv6"
            android:gravity="center"
            android:layout_below="@+id/lv5"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_color6"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="90% TO 100%" />

            <Button
                android:id="@+id/color_button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:drawable/btn_dropdown" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>